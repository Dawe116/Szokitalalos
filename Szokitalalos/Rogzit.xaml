<Window x:Class="Szokitalalos.Rogzit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Szokitalalos"
        mc:Ignorable="d"
        Title="Rogzit" Height="300" Width="250">

    <StackPanel>
        <Label Content="Kérlek add meg a neved és a Tippjeid számát"/>
        <Label Content="Neve: "/>
        <TextBox Name="txbName"/>

        <Label Content="Tippekszama: "/>
        <TextBox Name="txbTipps"/>

        <Button Name="btnSave" Content="Rögzít" Margin="5" Click="btnSave_Click"/>
        <Button Name="btnCancel" Content="Mégse" Margin="5" Click="btnCancel_Click"/>
    </StackPanel>
    
</Window>
